<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.heider.nacdado.GameActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            style="@style/label_header_title"
            android:text="@string/wins" />

        <TextView
            android:id="@+id/tvVitorias"
            style="@style/label_header"
            android:text="0" />

        <TextView
            style="@style/label_header_title"
            android:text="@string/draws" />

        <TextView
            android:id="@+id/tvEmpates"
            style="@style/label_header"
            android:text="0" />

        <TextView
            style="@style/label_header_title"
            android:text="@string/lose" />

        <TextView
            android:id="@+id/tvDerrotas"
            style="@style/label_header"
            android:text="0" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_above="@+id/btPlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPlayer"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/dice_1" />

        <ImageView
            android:id="@+id/ivPC"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/dice_1" />

    </LinearLayout>
    
    <Button
        android:id="@+id/btPlay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="@string/play"/>

</RelativeLayout>
